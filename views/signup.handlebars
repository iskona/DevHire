<div class="container signUpFormContainer">

    <div class="row">

        <div class="col-md-6 offset-md-3">

            <div class="signUpFormTitle">
                <h2>Sign-UP Form</h2>
                <hr>
            </div>

            <form class="signup">

                <div class="form-group signUPInput">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>

                <div class="form-group">
                    <label for="roleId">Select your role</label>
                    <select class="form-control" id="roleId">
                        <option class="client">I want to Hire</option>
                        <option class="developer">I want to Work</option>
                    </select>
                </div>

                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>

                <button type="submit" class="btn btn-default styleBTN">Sign Up</button>

            </form>

            <br />
            <p>Or log in <a href="/login">here</a></p>
        </div>
    </div>
</div>